<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScarpeCo</title>
    <script type="importmap"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/ScarpeCo.styles.css" asp-append-version="true" />

</head>
<body class="d-flex flex-column min-vh-100">

  
    <div class="bg-image flex-grow-1 d-flex flex-column"
         style="background-image: url('https://images8.alphacoders.com/107/1078674.png');
                background-size: cover;
                background-position: center;
                background-attachment: fixed;
                min-height: 100vh;">

        
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-transparent shadow">
                <div class="container">
                    <a class="navbar-brand fw-bold" href="/Prodotti/Index">Scarpe&Co</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link active" href="/Prodotti/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        
        <div class="container py-5 text-white flex-grow-1">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="bg-transparent text-white text-center py-4 mt-auto">
            <div class="container">
                <p class="mb-0">&copy; 2025 ScarpeCo. Tutti i diritti riservati.</p>
                <a href="/Home/Privacy" class="text-white">Privacy Policy</a>
            </div>
        </footer>

    </div>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
